<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SGAU | Informação Pública</title>
    <link href="informacaoPublica.css" rel="stylesheet" />
</head>
<% if(user) {%>
  <body class="bodyComLogin">
    <div class="navbar">
      <% if (user.tipo == 'Aluno' || user.tipo == 'Candidato' || user.tipo == 'DC' || user.tipo == 'AA' || user.tipo == 'PAA') { %>
        <label class="col" onclick="location.href='http://localhost:3000/processos';">Processos</label>
      <% } %>
      <% if (user.tipo == 'Aluno' || user.tipo == 'Regente') { %>
        <label class="col" onclick="location.href='http://localhost:3000/pautas';">Pautas Escolares</label>
      <% } %>
      <% if (user.tipo == 'DC') { %>
        <label class="col" onclick="location.href='http://localhost:3000/pautas';">Pautas de Colocados</label>
      <% } %>
      <% if (user.tipo == 'Candidato') { %>
        <label class="col">Candidatura</label>
      <% } %>
      <label class="col_sel" onclick="location.href='http://localhost:3000/informacao';">Informação Pública</label>
      <label class="col_log" onclick="location.href='http://localhost:3000/login';">Logout <%= user.name.split(' ')[0] %></label>
    </div>

    <div>
      <h1>Informação Pública</h1>
    </div>
    <br>

    <ul class="informacoes">
      <% if(pautas) { %> 
        <% pautas.forEach(pauta => { %>
          <li class="col" onclick="location.href='<%= pauta.documento %>';">
            Colocados da <%= pauta.tipoCurso %> de <%= pauta.curso %>
          </li>
        <% }); %> 
      <% } else {%>
        <h1>Não existem pautas de colocados</h1>
      <% } %> 
    </ul>
    
  </body>
<% } else {%>
  <body class="bodySemLogin">

    <div>
      <h1 color="black">Informação Pública</h1>
    </div>
    <br>

    <ul class="informacoes">
      <% if(pautas) { %> 
        <% pautas.forEach(pauta => { %>
          <li class="col" onclick="location.href='<%= pauta.documento %>';">
            Colocados da <%= pauta.tipoCurso %> de <%= pauta.curso %>
          </li>
        <% }); %> 
      <% } else {%>
        <h1>Não existem pautas de colocados</h1>
      <% } %> 
    </ul>

  </body>
<% } %>
</html>
