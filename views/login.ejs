<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login</title>
    <link href="styles.css" rel="stylesheet" />
  </head>
  <body class="backgroundImg">
    <div class="container">
      <h1>Login</h1>

      <% if (message) { %>
      <p class="error"><%= message %></p>
      <% } %>

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email"></label>
          <input
            type="text"
            id="email"
            name="email"
            placeholder="Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="password"></label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit">Entrar</button>
      </form>
      <br />
      <a href="/">Register</a>
    </div>
  </body>
</html>
